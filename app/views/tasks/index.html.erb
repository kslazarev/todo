<%= render :partial => 'menu/filters' %>

<h1>Listing tasks</h1>

<table>
  <tr>
    <th><%= t('content') %></th>
    <th><%= t('due_date') %></th>
    <th><%= t('important') %></th>
    <th><%= t('complete') %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <%= @filter_params[:complete] %>
  <% @tasks.each do |task| %>
      <tr>
        <td><%= task.content %></td>
        <td><%= l task.due_date %></td>
        <td><%= check_box_tag :important, '', task.important, :disabled => :true %></td>
        <td><%= check_box_tag :complete, '', task.complete, :disabled => :true %></td>
        <td><%= link_to 'Show', task_path(task) %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task_path(task), method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
</table>

<br/>

<%= link_to 'New Task', new_task_path %>
